{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "sourceMap": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/http/views/app/main.tsx"],
  "exclude": ["node_modules"]
}
