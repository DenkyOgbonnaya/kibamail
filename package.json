{
  "name": "@buyonce/bamboomailer",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "env-cmd -e development tsx watch --clear-screen=false --ignore src/http/views/app --ignore build/ --ignore ./vite.config.ts*.*.mjs src/start/dev.ts",
    "worker:dev": "env-cmd -e development tsx watch src/start/worker.ts",
    "test": "env-cmd -e test pnpm test:watch --run",
    "build:clean": "del-cli build",
    "test:watch": "env-cmd -e test --use-shell 'pnpm db:migrate && vitest'",
    "types:check": "tsc --noEmit",
    "start": "node build/main.ts",
    "build:client": "vite build",
    "build:server": "tsx src/bin/build.ts",
    "test:coverage": "env-cmd -e test vitest --run --coverage",
    "build": "pnpm test && pnpm types:check && pnpm pnpm quick:build",
    "quick:build": "pnpm build:clean && pnpm build:client && pnpm build:server",
    "format": "pnpm biome format --write .",
    "lint": "pnpm biome check --write .",
    "db:seed": "env-cmd -e development --use-shell 'pnpm db:migrate && tsx src/bin/seed.ts'",
    "db:migrate:dev": "env-cmd -e development pnpm db:migrate",
    "db:migrate": "pnpm drizzle-kit migrate --config=./src/database/drizzle.config.ts",
    "db:migrate:make": "pnpm drizzle-kit generate --config=./src/database/drizzle.config.ts",
    "db:studio": "env-cmd -e development pnpm drizzle-kit studio --config=./src/database/drizzle.config.ts",
    "make:files": "tsx src/bin/cli/cli.ts make:files"
  },
  "keywords": [],
  "author": "Frantz Kati <hey@katifrantz.com>",
  "license": "ISC",
  "description": "Buyonce software: Bamboomailer.",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@faker-js/faker": "^8.4.1",
    "@fastify/vite": "^6.0.6",
    "@hono/node-server": "^1.12.0",
    "@tanstack/react-query": "^5.51.11",
    "@tanstack/react-router": "^1.43.12",
    "@tanstack/router-devtools": "^1.43.12",
    "@tanstack/router-plugin": "^1.43.12",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "aws-sdk-client-mock": "^4.0.1",
    "del-cli": "^5.1.0",
    "drizzle-kit": "^0.22.8",
    "drizzle-orm": "^0.31.2",
    "esbuild": "^0.23.0",
    "globals": "^15.8.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.609.0",
    "@aws-sdk/client-sesv2": "^3.609.0",
    "@aws-sdk/client-sns": "^3.609.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@phc/format": "^1.0.0",
    "@poppinss/utils": "^6.7.3",
    "bullmq": "^5.10.4",
    "env-cmd": "^10.1.0",
    "hono": "^4.5.0",
    "mysql2": "^3.10.3",
    "valibot": "^0.36.0"
  },
  "prisma": {
    "schema": "src/database/schema/core.prisma"
  },
  "engines": {
    "node": ">=20"
  }
}
