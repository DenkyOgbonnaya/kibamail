{
  "name": "@kibamail/app",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "pnpm mysql:migrate:dev && pnpm clickhouse:migrate:dev && pnpm quick:dev",
    "quick:dev": "env-cmd -e development tsx watch --clear-screen=false --ignore src/views/app --ignore build/ --ignore ./vite.config.ts*.*.mjs src/start/dev.ts",
    "worker:dev": "env-cmd -e development tsx watch src/start/worker.ts",
    "test": "env-cmd -e test pnpm test:watch --run",
    "build:clean": "del-cli build",
    "test:watch": "pnpm mysql:migrate:test && pnpm clickhouse:migrate:test && env-cmd -e test vitest",
    "types:check": "tsc --noEmit",
    "build:client": "vite build",
    "build:server": "tsx src/bin/build.ts",
    "test:coverage": "env-cmd -e test vitest --run --coverage",
    "build": "pnpm test && pnpm types:check && pnpm quick:build",
    "quick:build": "pnpm build:clean && pnpm build:client && pnpm build:server",
    "format": "pnpm biome format --write .",
    "lint": "pnpm biome check --write .",
    "mysql:seed:dev": "pnpm mysql:migrate:dev && env-cmd -e development tsx src/bin/seed.ts",
    "mysql:migrate:dev": "env-cmd -e development pnpm mysql:migrate",
    "mysql:migrate:test": "env-cmd -e test pnpm mysql:migrate",
    "clickhouse:migrate:make": "tsx src/bin/clickhouse.ts make",
    "clickhouse:migrate:test": "env-cmd -e test tsx src/bin/clickhouse.ts run",
    "clickhouse:migrate:dev": "env-cmd -e development tsx src/bin/clickhouse.ts run",
    "mysql:migrate": "pnpm drizzle-kit migrate --config=./src/database/drizzle.config.ts",
    "mysql:migrate:make": "env-cmd -e development pnpm drizzle-kit generate --config=./src/database/drizzle.config.ts",
    "haraka:dev": "env-cmd -e development haraka -c src/haraka",
    "zonemta:dev": "env-cmd -e development tsx src/zonemta/start_zonemta.ts --config=./src/zonemta/config/zonemta.toml",
    "mysql:studio": "pnpm drizzle-kit studio --config=./src/database/drizzle.config.ts"
  },
  "keywords": [
    "open source",
    "email marketing",
    "transactional email",
    "email marketing platform"
  ],
  "author": "Frantz Kati <hey@katifrantz.com>",
  "license": "ISC",
  "description": "Kiba: The developer friendly email platform for modern businesses.",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@drizzle-team/brocli": "^0.9.2",
    "@faker-js/faker": "^8.4.1",
    "@fastify/vite": "^6.0.6",
    "@hono/node-server": "^1.12.0",
    "@tanstack/react-query": "^5.51.11",
    "@tanstack/react-router": "^1.43.12",
    "@tanstack/router-devtools": "^1.43.12",
    "@tanstack/router-plugin": "^1.43.12",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/ejs": "^3.1.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.15",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "del-cli": "^5.1.0",
    "drizzle-kit": "^0.22.8",
    "drizzle-orm": "^0.31.2",
    "esbuild": "^0.23.0",
    "globals": "^15.8.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.6",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@clickhouse/client": "^1.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@phc/format": "^1.0.0",
    "@poppinss/utils": "^6.7.3",
    "Haraka": "^3.0.3",
    "bullmq": "^5.10.4",
    "env-cmd": "^10.1.0",
    "hono": "^4.5.0",
    "ioredis": "^5.4.1",
    "luxon": "^3.5.0",
    "mysql2": "^3.10.3",
    "nodemailer": "^6.9.14",
    "nunjucks": "^3.2.4",
    "uuid": "^10.0.0",
    "valibot": "^0.36.0",
    "zone-mta": "3.9.6",
    "zonemta-avast": "1.0.0",
    "zonemta-delivery-counters": "1.0.1",
    "zonemta-limiter": "1.0.0",
    "zonemta-loop-breaker": "1.0.2"
  },
  "prisma": {
    "schema": "src/database/schema/core.prisma"
  },
  "engines": {
    "node": ">=20"
  }
}
