{
  "name": "@buyonce/bamboomailer",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "tsx watch src/dev.ts --clear-screen=false --ignore src/http/views/app",
    "test": "pnpm test:watch --run",
    "build:clean": "del-cli build",
    "test:watch": "pnpm db:migrate && vitest",
    "types:check": "tsc --noEmit",
    "start": "node build/main.ts",
    "build:client": "vite build",
    "build:server": "tsx src/bin/build.ts",
    "test:coverage": "vitest --run --coverage",
    "build": "pnpm test && pnpm types:check && pnpm pnpm quick:build",
    "quick:build": "pnpm build:clean && pnpm build:client && pnpm build:server",
    "format": "prettier --write .",
    "db:seed": "del-cli dev.db && pnpm db:migrate && tsx src/bin/seed.ts",
    "db:migrate": "pnpm drizzle-kit migrate --config=./src/infrastructure/database/drizzle.config.ts",
    "db:migrate:make": "pnpm drizzle-kit generate --config=./src/infrastructure/database/drizzle.config.ts",
    "db:studio": "pnpm drizzle-kit studio --config=./src/infrastructure/database/drizzle.config.ts",
    "make:files": "tsx src/bin/cli/cli.ts make:files"
  },
  "keywords": [],
  "author": "Frantz Kati <hey@katifrantz.com>",
  "license": "ISC",
  "description": "Buyonce software: Bamboomailer.",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@fastify/vite": "^6.0.6",
    "@hono/node-server": "^1.12.0",
    "@tanstack/react-router": "^1.43.12",
    "@tanstack/router-devtools": "^1.43.12",
    "@tanstack/router-plugin": "^1.43.12",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "aws-sdk-client-mock": "^4.0.1",
    "del-cli": "^5.1.0",
    "drizzle-kit": "^0.22.8",
    "drizzle-orm": "^0.31.2",
    "esbuild": "^0.23.0",
    "globals": "^15.8.0",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.609.0",
    "@aws-sdk/client-sesv2": "^3.609.0",
    "@aws-sdk/client-sns": "^3.609.0",
    "@hapi/boom": "^10.0.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@phc/format": "^1.0.0",
    "@poppinss/utils": "^6.7.3",
    "@sendgrid/mail": "^8.1.3",
    "better-sqlite3": "^11.1.2",
    "bullmq": "^5.8.4",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "fastify": "^4.28.1",
    "hono": "^4.5.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "valibot": "^0.36.0"
  },
  "prisma": {
    "schema": "src/infrastructure/database/schema/core.prisma"
  },
  "engines": {
    "node": ">=20"
  }
}
