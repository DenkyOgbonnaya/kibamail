{
  "name": "@buyonce/bamboomailer",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "tsx src/dev.ts --watch --ignore src/http/views/app",
    "test": "pnpm test:watch --run",
    "build:clean": "del-cli build",
    "test:watch": "pnpm db:migrate:run && vitest",
    "types:check": "tsc --noEmit",
    "start": "node build/main.js",
    "build:client": "vite build",
    "build:server": "tsx src/bin/build.ts",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint .",
    "build": "pnpm test && pnpm types:check && pnpm lint && pnpm pnpm quick:build",
    "quick:build": "pnpm build:clean && pnpm build:client && pnpm build:server",
    "format": "prettier --write .",
    "db:migrate:make": "pnpm drizzle-kit generate --schema=./src/infrastructure/database/schema/schema.ts --out=./src/infrastructure/database/schema/migrations --dialect=mysql",
    "db:migrate:run": "pnpm tsx src/bin/migrate.ts",
    "db:studio": "pnpm drizzle-kit studio --config=./src/infrastructure/database/drizzle.config.ts",
    "make:files": "tsx src/bin/cli/cli.ts make:files"
  },
  "keywords": [],
  "author": "Frantz Kati <hey@katifrantz.com>",
  "license": "ISC",
  "description": "Buyonce software: Bamboomailer.",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@faker-js/faker": "^8.4.1",
    "@fastify/vite": "^6.0.6",
    "@tanstack/react-router": "^1.43.12",
    "@tanstack/router-devtools": "^1.43.12",
    "@tanstack/router-plugin": "^1.43.12",
    "@types/bcrypt": "^5.0.2",
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "aws-sdk-client-mock": "^4.0.1",
    "change-case": "^5.4.4",
    "commander": "^12.1.0",
    "del-cli": "^5.1.0",
    "drizzle-kit": "^0.22.8",
    "drizzle-orm": "^0.31.2",
    "ejs": "^3.1.10",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.8.0",
    "inquirer": "^9.3.2",
    "mysql2": "^3.10.2",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.609.0",
    "@aws-sdk/client-ses": "^3.609.0",
    "@aws-sdk/client-sesv2": "^3.609.0",
    "@aws-sdk/client-sns": "^3.609.0",
    "@hapi/boom": "^10.0.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@phc/format": "^1.0.0",
    "@poppinss/utils": "^6.7.3",
    "@sendgrid/mail": "^8.1.3",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "fastify": "^4.28.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "prisma": {
    "schema": "src/infrastructure/database/schema/core.prisma"
  },
  "engines": {
    "node": ">=20"
  }
}
