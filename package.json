{
  "name": "@buyonce/bamboomailer",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "tsx --watch src/main.ts",
    "test": "pnpm test:watch --run",
    "test:watch": "pnpm db:migrate:run && vitest",
    "types:check": "tsc --noEmit",
    "start": "node build/main.js",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint .",
    "build": "pnpm test && pnpm types:check && pnpm lint && pnpm quick:build",
    "quick:build": "tsx src/bin/build.ts",
    "format": "prettier --write .",
    "db:migrate:make": "prisma migrate dev",
    "db:migrate:run": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "make:files": "tsx src/bin/cli/cli.ts make:files"
  },
  "keywords": [],
  "author": "Frantz Kati <hey@katifrantz.com>",
  "license": "ISC",
  "description": "Buyonce software: Bamboomailer.",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitest/coverage-v8": "^1.6.0",
    "aws-sdk-client-mock": "^4.0.1",
    "change-case": "^5.4.4",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.8.0",
    "inquirer": "^9.3.2",
    "prettier": "^3.3.2",
    "prisma": "^5.16.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.609.0",
    "@aws-sdk/client-ses": "^3.609.0",
    "@aws-sdk/client-sesv2": "^3.609.0",
    "@aws-sdk/client-sns": "^3.609.0",
    "@hapi/boom": "^10.0.1",
    "@phc/format": "^1.0.0",
    "@poppinss/utils": "^6.7.3",
    "@prisma/client": "^5.16.1",
    "@sendgrid/mail": "^8.1.3",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "fastify": "^4.28.1",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8"
  },
  "prisma": {
    "schema": "src/infrastructure/database/schema/core.prisma"
  },
  "engines": {
    "node": ">=20"
  }
}
